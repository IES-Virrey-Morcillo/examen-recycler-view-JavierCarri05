<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMontesActivity">

    <TextView
        android:id="@+id/txName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90sp"
        android:text="Nombre Monte:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtxNombreMonte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txName"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL foto:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtxNombreMonte"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtxUrlFotoMonte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txfoto"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Altura Monte:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtxUrlFotoMonte"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtxAlturaMonte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txAltura"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txContinente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continente:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtxAlturaMonte"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtxContinenteMonte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txContinente"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txURLInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Url Info:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtxContinenteMonte"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtxURLInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txURLInfo"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:textAllCaps="true"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtxURLInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
